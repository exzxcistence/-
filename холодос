import datetime
from decimal import Decimal

def add():
    time_year = int(input('Введите срок годности(год): '))
    time_month = int(input('Введите срок годности(месяц): '))
    time_day = int(input('Введите срок годности(день): '))
    weight = input('Введите вес(kg): ' )
    name = input('Введите имя продукта: ')
    need_dict = dict(expiration_date = datetime.date(time_year,time_month,time_day), amount = f'{weight} кг')
    goods[name].append((need_dict))

    
def find():
    name = input('Ввведите имя: ')
    for i in goods.keys():
        product = '' 
        for k in i:
            product += k
        if name == product:
            print(goods.get(i))
            return goods.get(i)
        else:
            return 'Такого товара нету'



def amount_get():
    list_of_product = find()
    c = 1
    for i in list_of_product:
        print(f'{c} Товар')
        for j in i.keys():
            print(i.get(j))
        c += 1
    return main()



goods = {
    'Пельмени Универсальные': [
        # Первая партия продукта 'Пельмени Универсальные':
        {'amount': '0.5 кг', 'expiration_date': datetime.date(2023, 7, 15)},
        # Вторая партия продукта 'Пельмени Универсальные':
        {'amount': '2 кг', 'expiration_date': datetime.date(2023, 8, 1)},
    ],
    'Вода': [
        {'amount': '1.5 литров', 'expiration_date': None}
    ],
}
def main():
    a = 7
    while a != 0:
        print('Выбери что ты хочешь сделать')
        print('Напиши 1 чтобы выполнить поиск')
        print('Напиши 2 чтобы добавить товар')
        print('Напиши 3 чтобы посмотреть сколько товара осталось')
        print('Напиши 0 чтобы выйти')
        a = int(input())
        if a == 1:
            find()
        if a == 2:
            add()
        if a == 3:
            amount_get()
        if a == 0:
            return 'Вы вышли'
main()
